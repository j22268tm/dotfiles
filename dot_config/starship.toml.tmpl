"$schema" = 'https://starship.rs/config-schema.json'

{{ $theme := .theme_color | default "#16161E" }}
{{ $colors := dict
  "dark" $theme
  "medium" "#212736"
  "light" "#394260"
  "accent" "#769ff0"
  "text" "#e3e5e5"
}}

format = """
[░▒▓]({{ $theme }})\
{{ if (eq .chezmoi.os "windows") }}
[ 󰨡 ](bg:{{ $theme }} fg:#090c0c)\
{{ else if (eq .chezmoi.os "darwin") }}
[  ](bg:{{ $theme }} fg:#090c0c)\
{{ else }}
[ 󰌽 ](bg:{{ $theme }} fg:#090c0c)\
{{ end }}
$hostname\
[](bg:{{ $colors.accent }} fg:{{ $theme }})\
$directory\
[](fg:{{ $colors.accent }} bg:{{ $colors.light }})\
$git_branch\
$git_status\
[](fg:{{ $colors.light }} bg:{{ $colors.medium }})\
{{ if not (eq .chezmoi.os "windows") }}
$python\
{{ end }}
$nodejs\
$rust\
$golang\
$php\
[](fg:{{ $colors.medium }} bg:{{ $colors.dark }})\
$time\
[ ](fg:{{ $colors.dark }})\
\n$character"""

[directory]
style = "fg:{{ $colors.text }} bg:{{ $colors.accent }}"
format = "[ $path ]($style)"
truncation_length = 3
truncation_symbol = "…/"

[directory.substitutions]
"Documents" = "󰈙 "
"Downloads" = " "
"Music" = " "
"Pictures" = " "

[git_branch]
symbol = ""
style = "bg:{{ $colors.light }}"
format = '[[ $symbol $branch ](fg:{{ $colors.accent }} bg:{{ $colors.light }})]($style)'

[git_status]
style = "bg:{{ $colors.light }}"
format = '[[($all_status$ahead_behind )](fg:{{ $colors.accent }} bg:{{ $colors.light }})]($style)'

[nodejs]
symbol = ""
style = "bg:{{ $colors.medium }}"
format = '[[ $symbol ($version) ](fg:{{ $colors.accent }} bg:{{ $colors.medium }})]($style)'

[rust]
symbol = ""
style = "bg:{{ $colors.medium }}"
format = '[[ $symbol ($version) ](fg:{{ $colors.accent }} bg:{{ $colors.medium }})]($style)'

[golang]
symbol = ""
style = "bg:{{ $colors.medium }}"
format = '[[ $symbol ($version) ](fg:{{ $colors.accent }} bg:{{ $colors.medium }})]($style)'

[php]
symbol = ""
style = "bg:{{ $colors.medium }}"
format = '[[ $symbol ($version) ](fg:{{ $colors.accent }} bg:{{ $colors.medium }})]($style)'

{{ if not (eq .chezmoi.os "windows") }}
[python]
symbol = ""
style = "bg:{{ $colors.medium }}"
format = '[[ $symbol ($version) ](fg:{{ $colors.accent }} bg:{{ $colors.medium }})]($style)'
{{ end }}

[time]
disabled = false
{{ if eq .chezmoi.os "windows" }}
time_format = "%H:%M"
{{ else }}
time_format = "%R"
{{ end }}
style = "bg:{{ $colors.dark }}"
format = '[[  $time ](fg:#a0a9cb bg:{{ $colors.dark }})]($style)'

[hostname]
ssh_only = false
style = "bg:{{ $theme }} fg:#090c0c"
format = '[$ssh_symbol$hostname]($style)'
trim_at = "."
disabled = false
ssh_symbol = " "

# カスタムモジュールとしてSSHセッション検出（オプション）
[custom.ssh_warning]
command = """
if [ -n "$SSH_CONNECTION" ] || [ -n "$SSH_TTY" ] || [ -n "$SSH_CLIENT" ]; then
  echo "SSH"
fi
"""
when = """
[ -n "$SSH_CONNECTION" ] || [ -n "$SSH_TTY" ] || [ -n "$SSH_CLIENT" ]
"""
style = "bg:red fg:white"
format = "[ $output ]($style)"
